#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d\n",&n);
    int list[n+1];
    int visited[n+1];
    for(int i=0;i<n;i++){
        scanf("%d",&list[i]);
        visited[i]=0;
    }
    for(int b=0;b<n;b++){
        if(visited[b]==1){
            continue;
        }
        int count=1;
        for(int i=b+1;i<n;i++){
           if(list[i]==list[b]){
            count++;
            visited[i]=1;
           }
    }
    printf("%d: %d\n",list[b],count);
    }
    
    return 0;
}
